<div class="w-50 mx-auto">
  <%= form_for @package do |f| %>
    <div class="form-group">
      <%= f.label :name, "Name", class: "lead text-dark" %>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    </div>
    <div class="form-group">
      <%= f.label :image, "Image", class: "lead text-dark" %>
      <%= f.text_field :image, class: "form-control", placeholder: "Image" %>
    </div>
    <div class="form-group">
      <%= f.label :start_date, "Start Date", class: "lead text-dark" %>
      <%= f.date_field :start_date, class: "form-control", placeholder: "Start Date" %>
    </div>
    <div class="form-group">
      <%= f.label :end_date, "End Date", class: "lead text-dark" %>
      <%= f.date_field :end_date, class: "form-control", placeholder: "End Date" %>
    </div>
    <div class="form-group">
      <%= f.label :price, "Price", class: "lead text-dark" %>
      <%= f.number_field :price, class: "form-control", placeholder: "Price" %>
    </div>
    <div class="form-group">
      <%= f.label :description, "Description", class: "lead text-dark" %>
      <%= f.text_area :description, class: "form-control", placeholder: "Description" %>
    </div>
    <%= f.submit "Submit", :class => "btn btn-success btn-block mt-5" %>
  <% end %>
</div>

<div class="text-center">
  <%= button_to "← Back", :back, method: :get, class: "btn btn-primary btn-sm my-5" %>
</div>